\tikzset{
	scorelettre/.style={
		font=\sffamily\bfseries\tiny,align=center,scale=\fpeval{\PLSCRBBLEechelleLabel*0.8},draw=none,fill=none
	},
	pics/.cd,
	pointes/.style args={#1#2#3}{
		code={
