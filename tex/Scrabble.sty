			[rotate=-\i*90] -- (-#1*#2,1) {\foreach \j in {1,...,#1} {-- ++(#2,#2) -- ++(#2,-#2)} -- (1,1)}}} -- cycle;
		}
	},
	casecentrale/.style={
		code={
			\path pic {pointes={2}{0.15}{red!25}};
